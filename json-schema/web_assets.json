{
  "$schema": "http://json-schema.org/draft-07/schema#",

  "definitions": {
    "assets": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "pattern": "[a-zA-Z0-9\\_\\-\\.]"
        },
        "type": {
          "type": "string",
          "enum": ["style", "script", "preset", "webcomponent"]
        },
        "dependencies": {
          "type": "array",
          "contains": {
            "type": "string"
          }
        },
        "uri": {
          "type": "string"
        },
        "attribute": {
          "type": "object"
        },
        "namespace": {
          "type": "string"
        },
        "class": {
          "type": "string",
          "pattern": "[a-zA-Z0-9\\_]"
        }
      },
      "required": ["name", "type"]
    }
  },

  "type": "object",

  "properties": {
    "name": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "license": {
      "type": "string"
    },
    "namespace": {
      "type": "string"
    },
    "assets": {
      "type": "array",
      "uniqueItems": true,
      "items": { "$ref": "#/definitions/assets" }
    }
  },

  "required": ["name", "version", "description", "assets"]
}
