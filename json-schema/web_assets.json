{
  "$schema": "https://json-schema.org/draft/2020-12/schema#",
  "$id": "https://developer.joomla.org/schemas/json-schema/web_assets.json",

  "definitions": {
    "assets": {
      "type": "object",
      "properties": {
        "name": {
          "description": "The name of the asset item, eg: com_foo.bar",
          "type": "string",
          "pattern": "[a-zA-Z0-9\\_\\-\\.]"
        },
        "type": {
          "description": "The type of the asset item",
          "type": "string",
          "enum": ["style", "script", "preset"]
        },
        "uri": {
          "description": "File uri/path string, full or relative to 'media/' folder, eg: com_foo/bar.js",
          "type": "string"
        },
        "attributes": {
          "description": "The item attributes",
          "type": "object"
        },
        "namespace": {
          "description": "Namespace of a class that will be loaded with this item",
          "type": "string"
        },
        "class": {
          "description": "Class name that will be loaded with this item",
          "type": "string",
          "pattern": "[a-zA-Z0-9\\_]"
        },
        "version": {
          "description": "Version of the asset item",
          "type": "string"
        },
        "deprecated": {
          "description": "A flag to mark a deprecated assets",
          "type": "boolean"
        },
        "deprecatedMsg": {
          "description": "An optional message with deprecation information",
          "type": "string"
        },
        "importmap": {
          "description": "A flag which indicates that the asset is for importmap",
          "type": "boolean"
        },
        "importmapName": {
          "description": "An optional module name for the asset in importmap",
          "type": "string"
        },
        "importmapScope": {
          "description": "An optional scope path, for the asset in importmap",
          "type": "string"
        },
        "dependencies": {
          "description": "A list of the item dependencies",
          "type": "array",
          "contains": {
            "type": "string"
          }
        },
        "crossDependencies": {
          "description": "A collection of the item cross-dependencies",
          "type": "object",
          "properties": {
            "style": {
              "description": "A list of the item dependencies (style)",
              "type": "array",
              "contains": {
                "type": "string"
              }
            },
            "script": {
              "description": "A list of the item dependencies (script)",
              "type": "array",
              "contains": {
                "type": "string"
              }
            }
          }
        }
      },

      "required": ["name", "type"],

      "dependentSchemas": {
        "importmapName": {
          "properties": {
            "importmap": { "const": true },
            "type": {"const": "script"}
          },
          "required": [
            "importmap"
          ]
        },
        "importmapScope": {
          "properties": {
            "importmap": { "const": true },
            "type": {"const": "script"}
          },
          "required": [
            "importmap"
          ]
        }
      }
    }
  },

  "type": "object",

  "properties": {
    "name": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "license": {
      "type": "string",
      "description": "License name. This SHOULD be a valid SPDX license identifier."
    },
    "namespace": {
      "type": "string"
    },
    "assets": {
      "type": "array",
      "uniqueItems": true,
      "items": { "$ref": "#/definitions/assets" }
    }
  },

  "required": ["name", "version", "description", "assets"]
}
